@model StoreWebUI.Models.ItemVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add new Item to selected Order</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div class="container" style="position:center">




                <div class="form-group row ">
                    <label>Product:</label>
                    @Html.DropDownListFor(m => m.ProductId, Model.Products.Select(d => new SelectListItem() { Value = d.Id.ToString(), Text = d.Name }))

                </div>
                <br />
                <div class="form-group row">
                    <label asp-for="Quantity" class="control-label">Quantity</label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>

                </div>


                <div class="form-group row">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>


                <input asp-for="OrderId" type="hidden" value=@Model.OrderId class="form-control" />

                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

